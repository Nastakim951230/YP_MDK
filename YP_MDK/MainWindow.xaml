<Window x:Class="YP_MDK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YP_MDK"
        mc:Ignorable="d"
        Title="ООО «Пиши-стирай»" Height="800" Width="1000" MinHeight="800" MinWidth="1000" Icon="./Image/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                <Image Source="./Image/logo.png" Height="70"/>
                <TextBlock Text="ООО «Пиши-стирай»" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="1">
            <Frame Name="frame_perehod" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
       
    </Grid>
</Window>
